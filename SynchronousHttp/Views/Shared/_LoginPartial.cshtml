@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/Account/Manage" title="Manage"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> @User.Identity.GetUserName()</a>
            </li>
            @if (User.Identity.GetUserName().ToString() == "admin") 
            {
                <li>
                    <a href="/Account/Register" id="registerLink"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add User</a>
                </li>
            }
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Logout</a>
            </li>
        </ul>
    }
}
